<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/level_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Уровень: 1"
        android:textSize="18sp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/computer_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_text_view"
        android:layout_alignParentStart="true"
        android:text="Robot: 0"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/computer2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/computer_score"
        android:layout_alignParentStart="true"
        android:text="Terminator: 0"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/computer3_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_score"
        android:layout_alignParentEnd="true"
        android:text="Transformer: 0"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_text_view"
        android:layout_alignParentEnd="true"
        android:text="Human: 0"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_blue_light" />

    <com.abelflynn.vir.SquareGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/computer3_score"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="0dp" />

</RelativeLayout>
